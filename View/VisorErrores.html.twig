{% extends "Master/MenuBgTemplate.html.twig" %}

{% block body %}
    <div class="container">
        <div class="d-flex justify-content-between align-items-center mb-4">
            <h1>
                <i class="fa-solid fa-triangle-exclamation me-1"></i> Visor de errores
            </h1>
            {% if fsc.datosArchivos %}
                <a href="?action=delete-all" class="btn btn-secondary position-relative"
                   onclick="return confirm('Â¿EstÃ¡ seguro de eliminar todos los errores?');">
                    <i class="fa-solid fa-trash-alt me-1"></i> Eliminar todos
                    <span class="position-absolute top-0 start-100 translate-middle badge rounded-pill bg-danger">
                        {{ fsc.datosArchivos | length }}
                    </span>
                </a>
            {% endif %}
        </div>
        {% if fsc.datosArchivos %}
            {% for datos in fsc.datosArchivos %}
                <div class="card shadow mb-3">
                    <div class="card-header d-flex justify-content-between align-items-center">
                        <a href="https://facturascripts.com/errores/{{ datos.hash }}" target="_blank">
                            ðŸš¨ {{ datos.hash }}
                        </a>
                        <div>
                            <span class="me-3">{{ datos.fecha }}</span>
                            <a href="?action=delete&hash={{ datos.hash }}" class="btn btn-sm btn-outline-danger"
                               onclick="return confirm('Â¿EstÃ¡ seguro de eliminar este error?');">
                                <i class="fa-solid fa-trash-alt"></i>
                            </a>
                        </div>
                    </div>
                    <div class="card-body">
                        <div class="mb-3">
                            <strong>Mensaje:</strong><br>
                            {{ datos.datos.message|raw|nl2br }}
                        </div>
                        <div class="row">
                            <div class="col-md-6 mb-2">
                                <strong>Archivo:</strong> {{ datos.datos.file }}
                            </div>
                            <div class="col-md-6 mb-2">
                                <strong>LÃ­nea:</strong> {{ datos.datos.line }}
                            </div>
                            <div class="col-md-6 mb-2">
                                <strong>URL:</strong> {{ datos.datos.url }}
                            </div>
                            <div class="col-md-6 mb-2">
                                <strong>IP:</strong> {{ datos.datos.ip }}
                            </div>
                        </div>
                    </div>
                </div>
            {% endfor %}
        {% else %}
            <div class="{{ fsc.kernelVersion2024 ? 'bg-warning text-dark rounded' : 'text-white text-bg-warning rounded-5' }} text-center p-1">
                {{ trans('no-data') }}
            </div>
        {% endif %}
    </div>
{% endblock %}